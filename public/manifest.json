{
  "id": "app.lovable.83f647f3cfa24f8c8777ba526dd5e49f",
  "name": "Legal Doc Scanner AI",
  "short_name": "LegalScan",
  "description": "Professional legal document analysis and AI-powered insights app for contracts, agreements, and legal documents",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#fefcf8",
  "theme_color": "#1a1a1a",
  "orientation": "portrait-primary",
  "lang": "en",
  "dir": "ltr",
  "scope": "/",
  "icons": [
    {
      "src": "/favicon.ico",
      "sizes": "any",
      "type": "image/x-icon"
    },
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
  "src": "/icon-512.png",
  "sizes": "512x512", 
  "type": "image/png",
  "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Document scanning interface"
    },
    {
      "src": "/screenshot-2.png",
      "sizes": "1280x720",
      "type": "image/png",
      "label": "AI analysis results screen"
    }
  ],
  "categories": ["business", "productivity", "utilities"],
  "prefer_related_applications": false,
  "display_override": ["standalone", "window-controls-overlay"],
  "shortcuts": [
    {
      "name": "Scan Document",
      "short_name": "Scan",
      "description": "Quick scan a document",
      "url": "/scan",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "View History",
      "short_name": "History",
      "description": "View document history",
      "url": "/history",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/scan",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "document",
          "accept": ["image/*", "application/pdf"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/scan",
      "accept": {
        "application/pdf": [".pdf"],
        "image/jpeg": [".jpg", ".jpeg"],
        "image/png": [".png"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}